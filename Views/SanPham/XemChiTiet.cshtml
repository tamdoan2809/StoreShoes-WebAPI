@model Nhom_10_QuanLyShopGiayTheThaoSneaker.Models.SanPham
@{
    ViewBag.Title = "XemChitiet";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h2>Chi Tiết Sản Phẩm</h2>
<div class="card border-dark ">
    <table class="border-dark mx-3 mb-3 mt-3 ">
        <tr class="text-left">
            <td rowspan="5" width="45%">
                <img class="card-header" src="@Url.Content("~/images/" + Model.Anh)" width="100%" height="100%" alt="Image">
            </td>
            <td width="20%">Tên Sản Phẩm:</td>
            <td width="35%" style="font-weight:bold; color:blue">@Model.TenSP</td>
        </tr>
        <tr class="text-left">
            <td>Loại giày:</td>
            <td style="color:blue">@Model.Loai.TenLoai</td>
        </tr>
        <tr class="text-left">
            <td>Mô Tả Kỹ Thuật: </td>
            <td style="color:blue">
                <div class="description-container">@Model.MoTa</div>
            </td>
        </tr>
        <tr class="text-left">
            <td>Giá bán:</td>
            <td style="font-weight:bold;color:red">@string.Format("{0:0,0}", @Model.GiaBan) VNĐ</td>
        </tr>
        <tr class="text-left">
            <td>Số lượng còn:</td>
            <td class="text-justify">@Model.SLTon</td>
        </tr>
        <tr>
            <td>
                <a href="@Url.Action("ThemGioHang", "GioHang", new { @msp = @Model.MaSP, @strURL = Request.Url.ToString() })">
                    <input type="submit" value="MUA NGAY" class="btn btn-primary" /> &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;
                </a>
                <a href="~/SanPham/SanPhamAll"><input type="submit" value="MUA TIẾP" class="btn btn-primary" /></a>
            </td>
            <td></td>
        </tr>
    </table>
</div>

<style>
    .description-container {
        max-height: 3rem;
        overflow-y: auto;
        padding-right: 10px;
    }
</style>
