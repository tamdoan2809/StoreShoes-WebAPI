@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@using Nhom_10_QuanLyShopGiayTheThaoSneaker.Models;
@model List<GioHang>
<!DOCTYPE html>
<html>
<head>
    <title>Giỏ Hàng</title>
    <style>
        /* CSS cho table */
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: Arial, sans-serif; /* Thay đổi font chữ */
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
            color: #333; /* Thay đổi màu sắc của chữ */
        }

        th {
            background-color: lightgray;
            font-weight: bold; /* Kiểu chữ đậm */
        }

        img {
            width: 50px;
            height: 50px;
        }

        .update-button {
            margin-left: 10px; /* Khoảng cách giữa nút cập nhật và footer */
        }

            /* Kiểu chữ đậm cho nút cập nhật */
            .update-button button {
                font-weight: bold;
            }

        /* Màu sắc và kích thước của chữ cho footer */
        footer {
            margin-top: 20px;
            color: #777;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <h2 style="color: navy;">Giỏ Hàng</h2>
    <table>
        <thead>
            <tr>
                <th>Mã Sản Phẩm</th>
                <th>Tên Sản Phẩm</th>
                <th>Ảnh</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
                <th>Xóa</th>
                <th>Cập Nhật</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.iMaSP</td>
                    <td>@item.sTenSP</td>
                    <td><img src="~/images/@item.Anh" alt="Ảnh sản phẩm" /></td>
                    <td>
                        <input type="number" class="soLuong" value="@item.iSoLuong" min="0" />
                    </td>
                    <td>@item.dDonGia</td>
                    <td>@item.dThanhTien</td>
                    <td>
                        <a href="@Url.Action("XoaGioHang", "GioHang", new { MaSP = item.iMaSP })" style="color: red;">Xóa</a>
                    </td>
                    <td class="update-button">
                        <form action="@Url.Action("CapNhatGioHang", "GioHang")" method="post">
                            <input type="hidden" name="MaSP" value="@item.iMaSP" />
                            <input type="number" name="SoLuong" value="@item.iSoLuong" min="0" />
                            <button type="submit" style="background: none; border: none; padding: 0; margin: 0; cursor: pointer;">
                                <img src="~/images/update.png" alt="Cập nhật" style="width: 25px; height: 25px;" />
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
